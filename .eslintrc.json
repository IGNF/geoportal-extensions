{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": "standard",
    "plugins": [],
    "globals": {
        "document": false,
        "navigator": false,
        "window": false
    },
    "rules": {
        "curly": "error",
        "dot-notation" : "off",
        "key-spacing": [
            "error",
            {
                "beforeColon": true,
                "afterColon": true
            }
        ],
        "keyword-spacing": [
            "error",
            {
                "before": true,
                "after": true
            }
        ],
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "no-console": "warn",
        "no-proto": "off",
        "no-prototype-builtins": "off",
        "linebreak-style": [
            "error",
            "unix"
        ],
        "padded-blocks": [
            "error",
            {
                "blocks": "never",
                "switches": "never",
                "classes": "always"
            }
        ],
        "prefer-promise-reject-errors": [
            "warn",
            {
                "allowEmptyReject": true
            }
        ],
        "quotes": [
            "error",
            "double", 
            { 
                "allowTemplateLiterals": true 
            }
        ],
        "semi": [
            "error",
            "always"
        ],
        "space-before-function-paren": [
            "error",
            "always"
        ],
        "space-unary-ops": [
            "error",
            {
                "words": true,
                "nonwords": false
            }
        ],
        "valid-jsdoc": [
            "warn",
            {
                "preferType": {
                    "boolean": "Boolean",
                    "number": "Number",
                    "object": "Object",
                    "string": "String",
                    "array": "Array"
                },
                "requireReturn": false
            }
        ]
    }
}
